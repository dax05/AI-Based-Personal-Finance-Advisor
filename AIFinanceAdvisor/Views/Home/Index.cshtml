@model List<AIFinanceAdvisor.Models.Expense>
@{
    ViewData["Title"] = "AI-Based Personal Finance Advisor";
}

<div class="container mt-5">
    <h1 class="text-center mb-4">💸 AI-Based Personal Finance Advisor</h1>

    <form asp-action="AddExpense" method="post" class="mb-4">
        <div class="row">
            <div class="col-md-4">
                <input name="category" class="form-control" placeholder="Category (e.g. Food)" required />
            </div>
            <div class="col-md-4">
                <input name="amount" type="number" step="0.01" class="form-control" placeholder="Amount" required />
            </div>
            <div class="col-md-4">
                <button type="submit" class="btn btn-success w-100">Add Expense</button>
            </div>
        </div>
    </form>

    <h4>Expense History</h4>
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Category</th>
                <th>Amount (₹)</th>
                <th>Date</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var e in Model)
            {
                <tr>
                    <td>@e.Category</td>
                    <td>@e.Amount</td>
                    <td>@e.Date.ToShortDateString()</td>
                </tr>
            }
        </tbody>
    </table>

    <div class="alert alert-info mt-4">
        <strong>AI Advice:</strong> @ViewBag.Advice
    </div>
</div>