@model List<AIFinanceAdvisor.Models.Expense>
@{
    ViewData["Title"] = "Expense History";
}

<div class="container mt-5">
    <h1 class="text-center mb-4">üìÖ Expense History</h1>

    <table class="table table-striped">
        <thead>
            <tr>
                <th>Date</th>
                <th>Category</th>
                <th>Amount (‚Çπ)</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var e in Model)
            {
                <tr>
                    <td>@e.Date.ToString("dd-MM-yyyy")</td>
                    <td>@e.Category</td>
                    <td>@e.Amount</td>
                </tr>
            }
        </tbody>
    </table>

    <a href="/Home/Index" class="btn btn-secondary mt-3">‚Üê Back to Home</a>
</div>
